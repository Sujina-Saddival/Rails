

 <% if current_user.id == @inviter %>


<%= form_for @event, url:event_edit_path(@user,@event), method: :put do |f|%>

 <%= f.label :Enter_Event_name%>    <%= f.text_field :event %></br></br>
    <%= f.label :Enter_Venue%>       <%= f.text_field :venue %></br></br>
